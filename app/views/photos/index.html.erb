<div>
  <div>
    <h1 class="center">
      List of all photos
    </h1>
  </div>
</div>
<% if session[:user_id] %>
<hr>

<div>
  <div>
    <h2>
      Add a new photo
    </h2>
<form action="/insert_photo" method="post">
      <div> 
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

  
      <div>
        <label for="caption_box">
          Caption
        </label>

        <textarea id="caption_box" name="query_caption" rows="3"></textarea>
      </div>

    

      <div>
        <label for="route_box">
          Route #
        </label>

        <input type="text" id="route_box" name="query_route">
      </div>

      <button>
        Create photo
      </button>
    </form>
  </div>
</div>
<% end %>
<hr>
<div>
  <div>
    <table class="table table-bordered">
      <tr>
        <th>
          ID
        </th>

        <th>
          Image
        </th>
         <th>
          Caption
        </th>
        <th>
          Owner
        </th>

        <th>
          Route #
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
        <td>
          <%= a_photo.id %>
        </td>

        <td>
          <img src=<%= a_photo.image %>>
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.owner %>
        </td>

        <td>
          <%= a_photo.route %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photo.updated_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
